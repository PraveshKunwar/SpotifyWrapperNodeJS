{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"allowJs": true,
		"checkJs": true,
		"outDir": "./lib",
		"rootDir": "./src",
		"removeComments": false,
		"noEmit": false,
		"noEmitOnError": false,
		"noImplicitAny": false,
		"noImplicitThis": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"strictPropertyInitialization": false,
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src"]
}
